<div class="container-fluid bg-dark me-md-3 pt-3 px-3 pt-md-2 px-md-5 text-center overflow-hidden align-center">
  <h1 class="display-5 text-white">Connection</h1>
    <div class="container col-7">
      <%= form_with( url: sessions_path, model: @user, method: :post, local: true ) do |form| %>
        
        <div class="mb-3">
        <%= form.label :email, class: "form-label text-white" %>
        <%= form.text_field :email, class: "form-control" %>
        </div>
    
        <div class="mb-3">
        <%= form.label :password, class: "form-label text-white" %>
        <%= form.text_field :password, class: "form-control" %>
        </div>

        <div class="mb-3">
        <%= form.label :stay_connect, class: "form-label text-white" %>
        <%= form.check_box :stay_connect %>        
        </div>

        <div class="mb-3">
        <%= form.submit "Connection", class: "btn btn-primary" %>
        </div>

      <% end%>
    </div> 
</div>